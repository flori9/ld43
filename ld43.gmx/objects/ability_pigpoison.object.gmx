        pigRelY = scene_get_y(pigToFlyTo) - y;
        scene_destroy_character(pigToFlyTo, false);
        toY = y - tileHeight * 2.5;
    }
}
else if (stage == 2) {
    y = lerp(ystart, toY, smooth_step(stagesub));
    if (stagesub &gt;= 2 / 3) {
        image_alpha = (1 - stagesub) * 3;
        pig_alpha = (1 - stagesub) * 3;
    }
    
    if (stagesub &gt;= 1 / 2 &amp;&amp; !actuallyDoneDamage) {
        var targetName = target[? "name"];
        targetHeSheIt = target[? "heSheIt"];

        damageMessage = fromCharacter[? "name"] + " sacrificed a pig, which poisoned " + targetName + ". " + string_capitalize_first(targetHeSheIt) + " now gets one damage per turn.";

        var otherPigPoisonsOnTarget = 0;
        
        with (ability_pigpoison_sub) {
            if (target == other.target)
                otherPigPoisonsOnTarget += 1;
        }
        
        with (instance_create(x + pigRelX + mean(5, 11), y + pigRelY + mean(14, 18), ability_pigpoison_sub)) {
            speed = 4;
            targetx = scene_get_x(other.target) + other.target[? "centerx"];
            targety = scene_get_y(other.target) + other.target[? "centery"];
            targety2 = scene_get_y(other.target) - 7 - otherPigPoisonsOnTarget * 11;
            target = other.target;
        }
            
        actuallyDoneDamage = true;
    }
    
    stagesub = min(stagesub + 0.01, 1);
    if (stagesub &gt;= 1 &amp;&amp; actuallyDoneDamage) {
        stagesub = 0;
        stage += 1;
        xstart = x;

        combat_show_result_message(damageMessage, fromCharacter);
        instance_destroy();
    }
}
