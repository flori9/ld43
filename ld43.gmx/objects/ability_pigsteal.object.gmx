        pigRelY = scene_get_y(pigToFlyTo) - y;
        ds_list_delete_first(obj_scene.positionList[| pigToFlyTo[? "x"]], pigToFlyTo);
        with (ability_protect_sub) {
            if (protectTarget == other.pigToFlyTo) {
                fadeout = true;
                fadein = false;
            }
        }
        toY = y - tileHeight * 2.5;
    }
}
else if (stage == 2) {
    y = lerp(ystart, toY, smooth_step(stagesub));
    
    stagesub += 0.03;
    if (stagesub &gt;= 1) {
        stagesub = 0;
        stage += 1;
        xstart = x;
    }
}
else if (stage == 3) {
    var targetPos = scene_find_empty(fromCharacter[? "alignment"], false);
    var toX = targetPos * tileWidth - pigRelX;
    x = lerp(xstart, toX, smooth_step(stagesub));
    
    stagesub += 4 / abs(toX - xstart);

    if (stagesub &gt;= 1) {
        stagesub = 0;
        stage += 1;
        ystart = y;
    }
}
else if (stage == 4) {
    y = lerp(ystart, -tileHeight, smooth_step(stagesub));
    
    stagesub += 0.025;

    if (stagesub &gt;= 1) {
        stagesub = 0;
        stage += 1;
        ystart = y;
        pigTransform = -pigTransform;
        if (myAlignment == alignment_other) {
            x += 8;
            pigRelX -= 8;
        } else {
            x -= 8;
            pigRelX += 8;
        }
    }
}
else if (stage == 5) {
    var targetPos = scene_find_empty(fromCharacter[? "alignment"], false);
    
    y = lerp(ystart, obj_scene.drawAtY - pigRelY, smooth_step(stagesub));

    stagesub = min(stagesub + 0.02, 1);
    if (stagesub &gt;= 1) {
        image_alpha -= 0.05;
        if (image_alpha &gt;= 0) {
            scene_add_character(targetPos, pigToFlyTo);
            pigToFlyTo[? "alignment"] = !pigToFlyTo[? "alignment"];
            
            combat_show_result_message(fromCharacter[? "name"] + " stole a pig!", fromCharacter);
            instance_destroy();
            exit;
        }
    }
}
